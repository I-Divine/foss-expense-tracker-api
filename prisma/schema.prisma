generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExpenseCategory {
  FOOD
  TRANSPORT
  ENTERTAINMENT
  HEALTH
  UTILITIES
  EDUCATION
  OTHER
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  spendLimit Float
  monthlyIncome Float
  expenses  Expense[]
  createdAt DateTime  @default(now())
}

model Expense {
  id          Int              @id @default(autoincrement())
  title       String
  amount      Float
  category    ExpenseCategory
  date        DateTime         @default(now())
  userId      Int
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime         @default(now())
}
